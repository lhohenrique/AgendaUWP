<windows:PrismUnityApplication
    x:Class="AgendaUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AgendaUWP"
    xmlns:windows="using:Prism.Unity.Windows">

    <windows:PrismUnityApplication.Resources>
        <Style x:Key="BackgroundApplication" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="White" Offset="0.0" />
                        <GradientStop Color="#005073" Offset="1.0" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </windows:PrismUnityApplication.Resources>
    
</windows:PrismUnityApplication>